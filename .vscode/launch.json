    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start",
            ],
            "port": 9229
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "./tests/**/*.spec.js",
                "--compilers",
                "js:babel-core/register"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },

    ]
}